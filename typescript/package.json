{
  "name": "@rlm/core",
  "version": "0.1.0",
  "description": "Recursive Language Model (RLM) - TypeScript implementation for processing extremely long contexts without context rot",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit/ tests/*.test.ts",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:benchmark": "bun test tests/benchmarks/",
    "test:all": "bun test tests/",
    "test:ci": "bun test tests/unit/ tests/integration/",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check src/",
    "format": "bunx biome format --write src/"
  },
  "dependencies": {
    "ai": "^4.3.0",
    "@anthropic-ai/sdk": "^0.40.0",
    "openai": "^4.80.0",
    "zod": "^3.24.0",
    "eventemitter3": "^5.0.1",
    "pino": "^9.6.0"
  },
  "optionalDependencies": {
    "@sebastianwessel/quickjs": "^3.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.31",
    "@anthropic-ai/claude-code": "^2.1.14",
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "llm",
    "recursive",
    "language-model",
    "long-context",
    "ai",
    "typescript",
    "bun"
  ],
  "author": "RLM Contributors",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}
